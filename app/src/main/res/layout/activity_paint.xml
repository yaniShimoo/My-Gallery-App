<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Paint"
    android:background="@drawable/sketches">


    <ImageView
        android:id="@+id/myColor"
        android:layout_width="55sp"
        android:layout_height="55sp"
        android:layout_gravity="center"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="10dp"
        android:scaleX="1.1"
        android:scaleY="1.1"
        android:src="@drawable/colorhex"
        android:tag="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/black" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="75sp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/pencil_D"
            android:layout_width="55sp"
            android:layout_height="55sp"
            android:layout_gravity="center"
            android:onClick="changePoint"
            android:scaleX="1.1"
            android:scaleY="1.1"
            android:src="@drawable/drawing"
            android:tag="Path" />

        <ImageView
            android:id="@+id/eraser_D"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_gravity="center"
            android:layout_marginLeft="10sp"
            android:onClick="Undo"
            android:src="@drawable/eraserb"
            android:tag="Path" />

        <SeekBar
            android:id="@+id/pencilSize_D"
            android:layout_width="140dp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_marginLeft="2sp"
            android:layout_weight="0"
            android:paddingTop="15sp"
            android:paddingBottom="15sp"
            android:progress="50"
            android:progressDrawable="@drawable/bg_custom_seekbar"
            android:splitTrack="false"
            android:thumb="@drawable/thumb_size" />

        <ImageView
            android:id="@+id/text_D"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_gravity="center"
            android:onClick="generateText"
            android:src="@drawable/textbox" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/save_D"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_gravity="center"
            android:layout_marginLeft="10sp"
            android:scaleX="1.3"
            android:scaleY="1.3"
            app:lottie_rawRes="@raw/checked_save" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frm"
        android:layout_width="match_parent"
        android:layout_marginTop="14dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="83sp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>