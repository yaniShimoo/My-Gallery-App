<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/foo">

    <TextView
        android:id="@+id/counterC_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/modern_antiqua"
        android:text="0/30"
        android:textColor="#505050"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/counterC_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="238dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/modern_antiqua"
        android:text="0/30"
        android:textColor="#505050"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="410sp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:paddingTop="10dp"
            android:text="New Customer"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="50sp"
            android:textStyle="bold"
            android:shadowColor="#61353535"
            android:shadowRadius="5" />

        <EditText
            android:id="@+id/etnameC"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginHorizontal="10sp"
            android:layout_marginTop="15sp"
            android:background="@drawable/edittextstyle"
            android:fontFamily="@font/modern_antiqua"
            android:hint="Name"
            android:inputType="text"
            android:maxLength="30"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textColorHint="#5E5E5E"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etPhoneC"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginHorizontal="10sp"
            android:layout_marginTop="15sp"
            android:background="@drawable/edittextstyle"
            android:fontFamily="@font/modern_antiqua"
            android:hint="Phone number"
            android:maxLength="10"
            android:inputType="phone"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textColorHint="#5E5E5E"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etAdressC"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginHorizontal="10sp"
            android:layout_marginTop="15sp"
            android:background="@drawable/edittextstyle"
            android:fontFamily="@font/modern_antiqua"
            android:hint="Address"
            android:inputType="textPostalAddress"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textColorHint="#5E5E5E"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/saveC"
            android:layout_width="290dp"
            android:layout_gravity="center"
            android:layout_height="75dp"
            android:layout_marginTop="15sp"
            android:background="@drawable/poloskab"
            android:backgroundTint="#000000"
            android:fontFamily="@font/modern_antiqua"
            android:shadowColor="#000000"
            android:text="Save Customer"
            android:textColor="#FAEFD3"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>