<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/paint"
        android:label="@string/app_name"
        android:roundIcon="@drawable/paint"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyGallery"
        tools:targetApi="31">
        <provider
            android:authorities="${applicationId}.provider"
            android:name="androidx.core.content.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths"/>
        </provider>

        <service
            android:name=".MusicService"
            android:enabled="true"
            android:exported="true" />
        <receiver
            android:name=".SMSIncomeReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".Paint"
            android:exported="false"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".NewOrder"
            android:exported="false"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".EditImage"
            android:exported="false"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".Sketches"
            android:exported="false"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".Messenger"
            android:exported="false"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".Orders"
            android:exported="false"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".Customers"
            android:exported="false"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".Gallery"
            android:exported="false"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".Login"
            android:exported="false"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".Registration"
            android:exported="false"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".Logo"
            android:exported="true"
            android:theme="@style/FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>